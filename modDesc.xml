<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<modDesc descVersion="40">
	<author>Dschonny, Slivicon, sperrgebiet</author>
	<version>1.0.0.0</version>
	<title>VehicleSort Alpha</title>
	<description>
			Blah
	</description>
	<iconFilename>icon.dds</iconFilename>
	<multiplayer supported="false" />

	<extraSourceFiles>
		<sourceFile filename="RegisterSpecialization.lua" />
	</extraSourceFiles>

	<registerSpecializations>
		<registerSpecialization name="vehicleSort" className="VehicleSort" filename="VehicleSort.lua" searchedSpecializations="Enterable"/>
	</registerSpecializations>	

	<actions>
		<action name="vsToggleList" axisType="HALF" />
		<action name="vsLockListItem" axisType="HALF" />
		<action name="vsMoveCursorUp" axisType="HALF" />
		<action name="vsMoveCursorDown" axisType="HALF" />
		<action name="vsMoveCursorUpFast" axisType="HALF" />
		<action name="vsMoveCursorDownFast" axisType="HALF" />
		<action name="vsChangeVehicle" axisType="HALF" />
		<action name="vsShowConfig" axisType="HALF" />
		<action name="vsTogglePark" axisType="HALF" />
	</actions>
	<inputBinding>	
		<actionBinding action="vsToggleList">
			<binding device="KB_MOUSE_DEFAULT" input="KEY_KP_0" axisComponent="+" neutralInput="0" index="1" />
		</actionBinding>
		<actionBinding action="vsLockListItem">
			<binding device="KB_MOUSE_DEFAULT" input="KEY_KP_5" axisComponent="+" neutralInput="0" index="1" />
		</actionBinding>
		<actionBinding action="vsMoveCursorUp">
			<binding device="KB_MOUSE_DEFAULT" input="KEY_KP_8" axisComponent="+" neutralInput="0" index="1" />
		</actionBinding>
		<actionBinding action="vsMoveCursorDown">
			<binding device="KB_MOUSE_DEFAULT" input="KEY_KP_2" axisComponent="+" neutralInput="0" index="1" />
		</actionBinding>
		<actionBinding action="vsMoveCursorUpFast">
			<binding device="KB_MOUSE_DEFAULT" input="KEY_1" axisComponent="+" neutralInput="0" index="1" />
		</actionBinding>
		<actionBinding action="vsMoveCursorDownFast">
			<binding device="KB_MOUSE_DEFAULT" input="KEY_2" axisComponent="+" neutralInput="0" index="1" />
		</actionBinding>
		<actionBinding action="vsChangeVehicle">
			<binding device="KB_MOUSE_DEFAULT" input="KEY_KP_enter" axisComponent="+" neutralInput="0" index="1" />
		</actionBinding>
		<actionBinding action="vsShowConfig">
			<binding device="KB_MOUSE_DEFAULT" input="KEY_KP_minus" axisComponent="+" neutralInput="0" index="1" />
		</actionBinding>		
		<actionBinding action="vsTogglePark">
			<binding device="KB_MOUSE_DEFAULT" input="KEY_KP_plus" axisComponent="+" neutralInput="0" index="1" />
		</actionBinding>
    </inputBinding>	
	
