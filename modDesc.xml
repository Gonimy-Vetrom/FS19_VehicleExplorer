		</actionBinding>
		<actionBinding action="vsTab">
			<binding device="KB_MOUSE_DEFAULT" input="KEY_tab" index="1" />
		</actionBinding>
		<actionBinding action="vsTabBack">
			<binding device="KB_MOUSE_DEFAULT" input="KEY_lshift KEY_tab" index="1" />
		</actionBinding>			
    </inputBinding>	
	
